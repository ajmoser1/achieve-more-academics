---
import '../styles/global.css'

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Achieve More Academics â€” STEM & SAT/ACT Tutoring",
  description = "Expert STEM tutoring and SAT/ACT prep for middle and high school students. Personalized online sessions that build confidence and boost scores."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <title>{title}</title>

    <!-- JSON-LD LocalBusiness Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Achieve More Academics",
      "description": description,
      "url": "https://achievemoreacademics.com",
      "telephone": "+1-555-123-4567",
      "email": "info@achievemoreacademics.com",
      "foundingDate": "2024",
      "priceRange": "$$",
      "areaServed": "United States",
      "serviceType": ["STEM Tutoring", "SAT Prep", "ACT Prep"],
      "sameAs": []
    })} />
  </head>
  <body class="antialiased">
    <slot />
  </body>
</html>
